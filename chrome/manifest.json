{
    "manifest_version": 3,
    "name": "왁물원 플러스",
    "version": "1.3",

    "description": "더 편리한 왁물원을 위한 확장 프로그램입니다.",
    "icons": {
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },

    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://cafe.naver.com/*"
            ],
            "all_frames": true,
            "css": [
                "css/thumbnail.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "*://cafe.naver.com/*",
        "*://apis.naver.com/*"
    ],
    "permissions": [
        "scripting",
        "storage",
        "tabs"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/*"
            ],
            "matches": [
                "*://cafe.naver.com/*"
            ]
        }
    ]
}