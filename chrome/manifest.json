{
    "manifest_version": 3,
    "name": "왁물원 플러스",
    "version": "1.0",

    "description": "더 편리한 왁물원을 위한 확장 프로그램입니다.",
    "icons": {
        "64": "icons/icon.png"
    },

    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://cafe.naver.com/steamindiegame/*"],
            "all_frames": true,
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "*://cafe.naver.com/steamindiegame/*"
    ],
    "permissions": [
        "storage"
    ]
}